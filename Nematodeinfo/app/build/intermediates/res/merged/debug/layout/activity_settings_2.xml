<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:weightSum="10"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin"

    tools:context="com.nemetologydept.nematodeinfo.settings">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8.88">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textSize="20dp"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:id="@+id/tex1"
            android:text="Please Select Your Language"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textSize="20dp"
            android:layout_below="@+id/tex1"
            android:layout_marginTop="25dp"
            android:paddingTop="10dp"
            android:textStyle="bold"
            android:id="@+id/tex2"
            android:text="Hindi Text"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tex2"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="70dp"
            android:id="@+id/button_english"
            android:text="ENGLISH"
            android:layout_marginRight="70dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button_english"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="70dp"
            android:id="@+id/button_hindi"
            android:text="HINDI"
            android:layout_marginRight="70dp"/>


    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.12"
        android:background="@color/primary_dark"
        android:padding="2dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:textColor="#ffffff"
            android:background="@color/primary_dark"
            android:text="@string/footer"
            android:textSize="16dp"
            android:textAlignment="center"

            />
    </LinearLayout>



</LinearLayout>
